{
  "server": {
    "root": "./app"
  },
  "livereload": {},
  "src": {
    "html": {
      "main": "index.html",
      "paths": ["index.html", "views/**/*.html"]
    },
    "less": {
      "main": "styles/less/${ appName }.less",
      "output": "styles/${ appName }.css",
      "paths": ["styles/less/**/*.less"]
    },
    "css": {
      "paths": ["styles/**/*.css"]
    },
    "js": {
      "main": "scripts/require.config.js",
      "output": "scripts/${ appName }.js",
      "paths": ["scripts/**/*.js"]
    }
  }
}
